{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div style="width: 100%; height: auto;">
            <h1>{{ post.getTitle() }}</h1>
            <span>Publish at: {{ post.getCreatedAt().format('Y-m-d H:i') }}</span>
            <p>{{ post.getContent() }}</p>
        </div>
    {% endfor %}
{% endblock %}